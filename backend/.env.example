# FOLIO Enrich Configuration
# Copy this to .env and fill in your values

# LLM Provider: "openai" or "anthropic"
FOLIO_ENRICH_LLM_PROVIDER=openai
FOLIO_ENRICH_LLM_MODEL=gpt-4o-mini

# API Keys (set at least one)
FOLIO_ENRICH_OPENAI_API_KEY=sk-...
FOLIO_ENRICH_ANTHROPIC_API_KEY=sk-ant-...

# Server
FOLIO_ENRICH_HOST=0.0.0.0
FOLIO_ENRICH_PORT=8000
FOLIO_ENRICH_DEBUG=false
FOLIO_ENRICH_CORS_ORIGINS=["*"]

# Rate Limiting
FOLIO_ENRICH_RATE_LIMIT_REQUESTS=60
FOLIO_ENRICH_RATE_LIMIT_WINDOW=60

# File Size Limit (bytes, default 50MB)
FOLIO_ENRICH_MAX_UPLOAD_SIZE=52428800

# Chunking
FOLIO_ENRICH_MAX_CHUNK_CHARS=3000
FOLIO_ENRICH_CHUNK_OVERLAP_CHARS=200
